{
  "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": false
  },
  "editor.suggestOnTriggerCharacters": false,
  "editor.acceptSuggestionOnEnter": "off",
  "editor.inlineSuggest.enabled": false,
  "editor.wordBasedSuggestions": "currentDocument",
  "editor.parameterHints.enabled": false,
  "editor.tabCompletion": "off",

  // Disable inline/AI suggestions (keep word-based suggestions only)
  "github.copilot.inlineSuggest.enable": false,

  // Disable Visual Studio IntelliCode suggestions (common provider)
  "visualStudiointellicode.enabled": false
}